<% provide(:title, "メニュー名の編集") %>
<h1 class="mb-3">メニュー名の編集</h1>
<div class="link-center">
  <i class="far fa-minus-square"></i>
  <%= link_to "メニューを削除",
    user_menu_path(current_user, @menu),
    class: "link-center icon-reset",
    method: :delete,
    data: { confirm: "本当に削除しますか？" }
  %>
</div>

<div class="row">
  <div class="col-md-6 offset-md-3">
    <%= form_with model: @menu,
      url: user_menu_path(current_user),
      local: true do |f|
    %>
      <%= render 'shared/error_messages', object: f.object %>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name,
          autofocus: true,
          autocomplete: 'name',
          class: 'form-control'
        %>
      </div>
      <div class="form-group pt-2">
        <%= f.submit "更新", class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>