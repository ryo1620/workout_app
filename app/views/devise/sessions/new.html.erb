<% provide(:title, "ログイン") %>
<h1><%= t('.sign_in') %></h1>

<div class="row row-original">
  <div class="col-md-6 col-md-6-original">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group">
        <%= f.label :email %><span>（このままでログインできます）</span>
        <%= f.email_field :email, value: 'example@example.com', autofocus: true, autocomplete: 'email', class: 'form-control' %>
      </div>
    
      <div class="form-group">
        <%= f.label :password %><span>（このままでログインできます）</span>
        <%= f.password_field :password, value: 'password', autocomplete: 'current-password', class: 'form-control' %>
      </div>
    
      <% if devise_mapping.rememberable? %>
        <div class="form-group form-check pl-0">
          <%= f.check_box :remember_me, class: 'form-check-input' %>
          <%= f.label :remember_me, class: 'form-check-label pl-3' do %>
            <%= resource.class.human_attribute_name('remember_me') %>
          <% end %>
        </div>
      <% end %>
    
      <div class="form-group pt-3 mb-0">
        <%= f.submit  t('.sign_in'), class: 'btn btn-primary' %>
      </div>
    <% end %>
    
    <%= render 'devise/shared/links' %>
  </div>
</div>
